# Directus — скопируй в .env и заполни
# cp .env.example .env

# Обязательные
POSTGRES_PASSWORD=      # Сложный пароль для PostgreSQL
KEY=                    # openssl rand -hex 32
SECRET=                 # openssl rand -hex 32
ADMIN_EMAIL=            # admin@yourdomain.com
ADMIN_PASSWORD=         # Сложный пароль для входа в Directus

# Опционально
POSTGRES_USER=directus
POSTGRES_DB=directus
DIRECTUS_PORT=8055

# Публичный URL Directus (для CORS, ссылок на assets)
# Замени на свой: https://admin.voshod.shop
PUBLIC_URL=http://localhost:8055
